	<extension id="AsideViews" point="org.eclipse.ui.views">
		<category id="edu.uncc.sis.aside" name="Aside">
		</category>
		<view category="edu.uncc.sis.aside" class="edu.uncc.sis.aside.views.ValidationRulesView"
			icon="platform:/plugin/edu.uncc.sis.aside/icons/map.png" id="edu.uncc.sis.aside.views.ValidationRulesView"
			name="Validation Rules View">
		</view>
		 <view id="edu.uncc.sis.aside.views.complimentaryExplanationView" name="Problem Description" class="edu.uncc.sis.aside.views.ExplanationView" icon="icons/map.png"
      category="edu.uncc.sis.aside"/>
	</extension>
	
	<extension point="org.eclipse.ui.perspectiveExtensions">
		<perspectiveExtension targetID="org.eclipse.jdt.ui.JavaPerspective">
			<view id="edu.uncc.sis.aside.views.ValidationRulesView" ratio="0.5"
				relationship="right" relative="org.eclipse.ui.views.TaskList">
			</view>
		</perspectiveExtension>
	</extension>

	<extension point="org.eclipse.ui.preferencePages">
		<page class="edu.uncc.sis.aside.preferences.AsideRulePreferencePage"
			id="edu.uncc.sis.aside.preferences.AsidePreferencePage" name="ASIDE">
		</page>
	</extension>

	<extension id="AsidePreferences" point="org.eclipse.core.runtime.preferences">
		<initializer class="edu.uncc.sis.aside.preferences.PreferenceInitializer">
		</initializer>
	</extension>

	<extension id="AsideContextMenus" point="org.eclipse.ui.popupMenus">
		<objectContribution id="edu.uncc.sis.aside.projectContribution"
			objectClass="org.eclipse.core.resources.IResource" adaptable="true">
			<filter name="projectNature" value="org.eclipse.jdt.core.javanature" />		
			<action class="edu.uncc.sis.aside.popup.actions.AddAsideRulesAction"
				enablesFor="+" icon="platform:/plugin/edu.uncc.sis.aside/icons/venus.png"
				id="edu.uncc.sis.aside.AddAsideRulesFolderAction" label="Add Aside Rules"
				menubarPath="edu.uncc.sis.aside.menu/aside_group" style="push"
				tooltip="Add Aside Rules Folder to Selected Java Project">
				<enablement>
					<or>
						<objectClass name="org.eclipse.core.resources.IProject" />
						<objectClass name="org.eclipse.core.resources.IFolder" />
						<and>
							<objectClass name="org.eclipse.core.resources.IFile" />
							<objectState name="extension" value="java" />
						</and>
						<and>
							<objectClass name="org.eclipse.core.resources.IFile" />
							<objectState name="extension" value="jsp" />
						</and>
					</or>
				</enablement>
			</action>
			
			<action class="edu.uncc.sis.aside.popup.actions.ManuallyLaunchAsideOnTargetAction"
				enablesFor="+" icon="platform:/plugin/edu.uncc.sis.aside/icons/sunshine.png"
				id="edu.uncc.sis.aside.LaunchAsideOnTargetAction" label="Run ASIDE"
				menubarPath="edu.uncc.sis.aside.menu/aside_group" style="push"
				tooltip="Manually launch ASIDE against selected target(s)">
				<enablement>
					<or>
						<objectClass name="org.eclipse.core.resources.IProject" />
						<objectClass name="org.eclipse.core.resources.IFolder" />
						<and>
							<objectClass name="org.eclipse.core.resources.IFile" />
							<objectState name="extension" value="java" />
						</and>
						<and>
							<objectClass name="org.eclipse.core.resources.IFile" />
							<objectState name="extension" value="jsp" />
						</and>
					</or>
				</enablement>
			</action>
			
		</objectContribution>
	</extension>

<extension
         point="org.eclipse.ui.menus">
         
        <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?before=additions">
            <menu id="edu.uncc.sis.aside.menu" label="ASIDE"
				icon="platform:/plugin/edu.uncc.sis.aside/icons/s.png">
				<separator name="aside_additions" visible="false"/>		
				<groupMarker name="aside_group" />
			</menu>
      </menuContribution>
         
      <menuContribution
            locationURI="popup:org.eclipse.jdt.ui.CompilationUnitEditor.EditorContext?after=edu.uncc.sis.aside.menu">
         <menu
               id="edu.uncc.sis.aside.auxiliary.popupMenu.rootMenuItem"
               label="ESAPI Validator"
               tooltip="Functions to make your application more secure">     
            <dynamic
                  class="edu.uncc.sis.aside.auxiliary.popup.actions.DynamicMenuContributionItem"
                  id="edu.uncc.sis.aside.auxiliary.dynamicMenuContributionItem">
            </dynamic>
            <separator
                  name="rootSeparator"
                  visible="false">
            </separator>
         </menu>
      </menuContribution>
   </extension>
